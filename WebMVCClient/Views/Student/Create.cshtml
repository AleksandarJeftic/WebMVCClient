@model WebMVCClient.ViewModels.StudentWithImage
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create","Student",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr/>
        <div class="form-group">
            <label class="control-label col-md-2">Ime</label>
            <div class="col-md-10">
                @Html.EditorFor(model=>model.StudentName,new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Prezime</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StudentLastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Odaberi Sliku</label>
            <div class="col-md-10">
                <input type="file" name="uploadFile" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

    </div>
}
