@model WebMVCClient.ViewModels.StudentWithImage
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm("Edit", "Student",FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.HiddenFor(model=>model.StudentID)
        @Html.HiddenFor(model => model.ImagePath)

        <div class="form-group">
            <label class="control-label col-md-2">Slika</label>
            <div class="col-md-10">
                <img src="@Url.Content(Model.ImagePath)" class="img-responsive" width="200" height="200" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ime</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Prezime</label>
            <div class="col-md-10">
                @Html.EditorFor(model=>model.StudentLastName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Odaberi Sliku</label>
            <div class="col-md-10">
                <input type="file" name="uploadFile" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>
    <p>

    @Html.ActionLink("Back To List", "Index")
    </p>
}
